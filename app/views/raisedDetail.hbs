
<div class="header">
    <h1 class="page-header">
        Project Detail
    </h1>
    <ol class="breadcrumb">
        <li><a href="/">All</a></li>
        <li class="active">proj</li>
    </ol>
</div>
{{#with project}}
<div id="page-inner">
    <div class="panel panel-default">
        <div class="panel-body">
            <h1 class="text-center mtop35">{{title}}</h1>
            <p class="text-center auth-row">
                {{ createTime}}   | <a href="#">{{comments.length}} Comments</a>
            </p>
            <div class="blog-img-wide" style="height: 200px;">
                <img src="{{image}}" width="100%" style="height: inherit;padding-bottom: 0;">
            </div>
            <hr>
            <div class="status">
                <div class="project-status">
                    <div class="progress progress-xs">
                        <div class="progress-bar progress-bar-warning progress-bar-striped" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 70%">
                            <span class="">{{percentage}}%</span>
                        </div>
                    </div>
                    <div class="project-raised">
                        <span class="project-raised-price">$ {{raisedAmount}}</span>
                        <span class="project-raised-label">raised</span>
                    </div>
                </div>
                <ul class="project-info">
                    <li class="project-info-unit">
                        <span class="unit-label">Target</span>
                        <span class="unit-figure">$ {{targetAmount}}</span>
                    </li>
                    <li class="project-info-unit">
                        <span class="unit-label">Funders</span>
                        <span class="unit-figure">{{funders.length}}</span>
                    </li>
                    <li class="project-info-unit ">
                        <span class="unit-label">Days left</span>
                        <span class="unit-figure">{{daysLeft}}</span>
                    </li>
                </ul>
            </div>
            <br><hr><hr>
            {{{description}}}
        </div>
    </div>
    <div class="wrapper" style="padding: 0px;">
        <div class="row blog">
            <div class="col-md-6">
                <div class="panel">
                    <div class="panel-heading">Funded List</div>
                    <div class="panel-body">
                        <table class="table">
